<Window x:Class="Agenda_WPF.TypeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Agenda_WPF"
        mc:Ignorable="d"
        Title="TypeWindow" Height="350" Width="450">
    <StackPanel>
        <TextBlock Text="Aanpassen van je afspraak types"  FontSize="24" HorizontalAlignment="Center" Margin="0,15,0,35" />
        <DataGrid x:Name="dgTypes" Margin="15,0,15,0" AutoGenerateColumns="False"  CellEditEnding="dgTypes_CellEditEnding" SelectionChanged="dgTypes_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Type" Binding="{Binding Name}" Width="120" />
                <DataGridTextColumn Header="Omschrijving" Binding="{Binding Description}" Width="200"/>
                <DataGridTemplateColumn x:Name="cellColor" Header="Kleur">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <!--<Rectangle Width="35" Height="15" Fill="{Binding Color}" Stroke="Black"/>-->
                            <local:ColorPicker SelectedColor="{Binding Color, Mode=TwoWay}" Width="60" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                    <DataGridTemplateColumn.CellEditingTemplate>
                        <DataTemplate>
                            <!--<TextBox Text="{Binding Color, Mode=TwoWay}"  Width="80"/>-->
                            <local:ColorPicker SelectedColor="{Binding Color, Mode=TwoWay}" Width="60" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellEditingTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="btnSave" Content="Bewaar wijzigingen" Style="{StaticResource ButtonStyle}" Width="120" Click="btnSave_Click" IsEnabled="False"/>
            <Button x:Name="btnDelete" Content="Delete" Style="{StaticResource ButtonStyle}" Width="120" Margin="30,0,0,0" Click="btnDelete_Click" IsEnabled="False"/>
        </StackPanel>
    </StackPanel>
</Window>
