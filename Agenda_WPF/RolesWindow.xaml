<Window x:Class="Agenda_WPF.RolesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Agenda_WPF"
        mc:Ignorable="d"
        Title="Roles" Height="270" Width="540">
    <StackPanel Orientation="Vertical">
        <TextBlock Text="Toekennen Rollen" FontSize="24" HorizontalAlignment="Center" />
        <StackPanel Orientation="Horizontal">
            <Label Content="Gebruiker: "/>
            <ComboBox x:Name="cbUsers" Width="200" Height="25" Margin="0,0,0,10" VerticalAlignment="Top" SelectionChanged="cbUsers_SelectionChanged"/>
            <Label Content="Rollen" Margin="20,0,0,0" VerticalAlignment="Top"/>
            <ListBox x:Name="lbRoles" Width="200" Height="150" SelectionMode="Multiple" SelectionChanged="lbRoles_SelectionChanged" Visibility="Collapsed"/>
        </StackPanel>
    </StackPanel>
</Window>
