<Window x:Class="Agenda_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Agenda_WPF"
        mc:Ignorable="d"
        Title="Agenda" Height="700" Width="1150">
    <StackPanel Margin="15,0,0,0" Orientation="Vertical">
        <Menu x:Name="mnGeneral" Style="{StaticResource MenuStyle}" >
            <MenuItem Header="Bestand">
                <MenuItem x:Name="Quit" Header="Stoppen" Click="Quit_Click"/>
            </MenuItem>
            <MenuItem x:Name="mniTypes" Header="Mijn types" Visibility="Collapsed" Click="mniTypes_Click"/>
            <MenuItem x:Name="mniSystem" Header="Parameters" Visibility="Collapsed">
                <MenuItem x:Name="mniSystemTypes" Header="Types" Click="mniSystemTypes_Click"/>
            </MenuItem>
            <MenuItem x:Name="mnUsers" Header="Gebruikers" Visibility="Collapsed">
                <MenuItem x:Name="Roles" Header="Rollen" Click="Roles_Click"/>
            </MenuItem>
        </Menu>
        <Menu x:Name="mnNoUser" Style="{StaticResource MenuStyle}" HorizontalAlignment="Right" Margin="0,-30,0,0">
            <MenuItem x:Name="mniRegister"  Header="Registreren" Click="mniRegister_Click"/>
            <MenuItem x:Name="mniLogin" Header="Inloggen" Click="mniLogin_Click" Margin="10,0,0,0"/> "
        </Menu>
        <Menu x:Name="mnUserKnow" Style="{StaticResource MenuStyle}" HorizontalAlignment="Right" Visibility="Collapsed" Margin="0,-30,0,0">
            <MenuItem x:Name="mniLogout"  Header="Afmelden" Click="mniLogout_Click"/>
            <MenuItem x:Name="mniName" Margin="10,0,0,0"/> "
        </Menu>

        <DataGrid x:Name="dgAppointments" Height="400" Width="1110" VerticalAlignment="Top" HorizontalAlignment="Left" SelectionMode="Single" SelectionChanged="dgAppointments_SelectionChanged" Visibility="Collapsed">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Wanneer" Binding="{Binding From}" Width="150"/>
                <DataGridTextColumn Header="Tot" Binding="{Binding To}" Width="150"/>
                <DataGridTextColumn Header="Afspraak" Binding="{Binding Title}" Width="200"/>
                <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="300"/>
                <DataGridTextColumn Header="Hele Dag?" Binding="{Binding AllDay}" Width="150"/>
                <DataGridTextColumn Header="Type" Binding="{Binding AppointmentType.Name}" Width="150"/>
            </DataGrid.Columns>
            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow">
                    <Setter Property="Foreground" Value="{Binding AppointmentType.Color}"/>
                </Style>
            </DataGrid.RowStyle>
        </DataGrid>
        <StackPanel x:Name="spGeneral" Orientation="Horizontal" Visibility="Collapsed">
            <StackPanel Orientation="Vertical" HorizontalAlignment="Left" Margin="0,15,0,0">
                <Button x:Name="btnAdd" Content="Toevoegen" Style="{StaticResource ButtonStyle}" Click="btnAdd_Click"/>
                <Button x:Name="btnEdit" Content="Wijzigen" Style="{StaticResource ButtonStyle}" IsEnabled="False" Click="btnEdit_Click"/>
                <Button x:Name="btnDelete" Content="Verwijderen" Style="{StaticResource ButtonStyle}" IsEnabled="False" Click="btnDelete_Click" />
                <Button x:Name="btnSave" Content="Opslaan" Style="{StaticResource ButtonStyle}" Margin="0,30,0,0" Visibility="Hidden" Click="btnSave_Click"/>
            </StackPanel>
            <Grid x:Name="grDetails" Margin="50,15,0,0" Visibility="Hidden">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/> 
                    <RowDefinition Height="Auto"/> 
                    <RowDefinition Height="*"/> 
                </Grid.RowDefinitions>
                <Label Content="Wanneer:" Style="{StaticResource LabelStyle}" Grid.Row="0" Grid.Column="0"/>
                <DatePicker x:Name="dpFrom" Grid.Row="0" Grid.Column="1" Text="{Binding From,Mode=TwoWay}" Width="150" HorizontalAlignment="Left" SelectedDateChanged="SelectedDateChanged" />
                <Label Content="Tot:" Style="{StaticResource LabelStyle}" Grid.Row="0" Grid.Column="2" />
                <DatePicker x:Name="dpTo" Grid.Row="0" Grid.Column="3" Text="{Binding To,Mode=TwoWay}" Width="150" HorizontalAlignment="Left" SelectedDateChanged="SelectedDateChanged"/>
                <Label Content="Afspraak:" Style="{StaticResource LabelStyle}" Grid.Row="1" Grid.Column="0" />
                <TextBox x:Name="tbTitle" Grid.Row="1" Grid.Column="1" Text="{Binding Title,Mode=TwoWay}" Style="{StaticResource TextBoxStyle}" TextChanged="TextChanged" />
                <Label Content="Type Afspraak:" Style="{StaticResource LabelStyle}" Grid.Row="1" Grid.Column="2"/>
                <ComboBox x:Name="cbTypes" Grid.Row="1" Grid.Column="3" SelectedItem="{Binding AppointmentType,Mode=TwoWay}" Width="150" HorizontalAlignment="Left" SelectionChanged="SelectedDateChanged" />
                <Label Content="Extra Informatie:" Style="{StaticResource LabelStyle}" VerticalAlignment="Top" Grid.Row="3" Grid.Column="0" />
                <TextBox x:Name="tbDescription" Grid.Row="2" Grid.Column="1" Style="{StaticResource TextBoxStyle}" Grid.ColumnSpan="3" Width="550" VerticalScrollBarVisibility="Auto" Text="{Binding Description,Mode=TwoWay}" AcceptsReturn="True" TextChanged="TextChanged" />
            </Grid>
        </StackPanel>
        <Rectangle x:Name="TestColorPicker" Width="150" Height="25"/>
        <local:ColorPicker x:Name="clrPicker" SelectedColor="Blue"  SelectedColorChanged="clrPicker_SelectedColorChanged"  Background="Beige" Width="100" Height="20"/>
    </StackPanel>
</Window>
