<Window x:Class="Agenda_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Agenda_WPF"
        mc:Ignorable="d"
        Title="Agenda" Height="700" Width="1200">
    <StackPanel Margin="15,45,0,0" Orientation="Vertical">
        <DataGrid x:Name="dgAppointments" Height="400" Width="1110" VerticalAlignment="Top" HorizontalAlignment="Left" SelectionMode="Single" SelectionChanged="dgAppointments_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Wanneer" Binding="{Binding From}" Width="150"/>
                <DataGridTextColumn Header="Tot" Binding="{Binding To}" Width="150"/>
                <DataGridTextColumn Header="Afspraak" Binding="{Binding Title}" Width="200"/>
                <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="300"/>
                <DataGridTextColumn Header="Hele Dag?" Binding="{Binding AllDay}" Width="150"/>
                <DataGridTextColumn Header="Type" Binding="{Binding AppointmentType.Name}" Width="150"/>
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel Orientation="Horizontal">
            <StackPanel Orientation="Vertical" HorizontalAlignment="Left" Margin="0,15,0,0">
                <Button x:Name="btnAdd" Content="Toevoegen" Width="100" Height="30" Click="btnAdd_Click"/>
                <Button x:Name="btnEdit" Content="Wijzigen" Width="100" Height="30" IsEnabled="False" Click="btnEdit_Click"/>
                <Button x:Name="btnDelete" Content="Verwijderen" Width="100" Height="30" IsEnabled="False" Click="btnDelete_Click" />
                <Button x:Name="btnSave" Content="Opslaan" Width="100" Height="30" Margin="0,30,0,0" Visibility="Hidden" Click="btnSave_Click"/>
            </StackPanel>
            <Grid x:Name="grDetails" Margin="50,0,0,0" Visibility="Hidden">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/> 
                    <RowDefinition Height="Auto"/> 
                    <RowDefinition Height="*"/> 
                </Grid.RowDefinitions>
                <Label Content="Wanneer:" Style="{StaticResource LabelStyle}" Grid.Row="0" Grid.Column="0"/>
                <DatePicker x:Name="dpFrom" Grid.Row="0" Grid.Column="1" Text="{Binding From,Mode=TwoWay}" Width="150" HorizontalAlignment="Left" SelectedDateChanged="SelectedDateChanged" />
                <Label Content="Tot:" Style="{StaticResource LabelStyle}" Grid.Row="0" Grid.Column="2" />
                <DatePicker x:Name="dpTo" Grid.Row="0" Grid.Column="3" Text="{Binding To,Mode=TwoWay}" Width="150" SelectedDateChanged="SelectedDateChanged"/>
                <Label Content="Afspraak:" Style="{StaticResource LabelStyle}" Grid.Row="1" Grid.Column="0" />
                <TextBox x:Name="tbTitle" Grid.Row="1" Grid.Column="1" Text="{Binding Title,Mode=TwoWay}" Width="200" TextChanged="TextChanged" />
                <Label Content="Extra Informatie:" Style="{StaticResource LabelStyle}" VerticalAlignment="Top" Grid.Row="2" Grid.Column="0" />
                <TextBox x:Name="tbDescription" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="3" VerticalScrollBarVisibility="Auto" Text="{Binding Description,Mode=TwoWay}" AcceptsReturn="True" TextChanged="TextChanged" />
                <Label Content="Type Afspraak:" Style="{StaticResource LabelStyle}" Grid.Row="1" Grid.Column="2"/>
                <ComboBox x:Name="cbTypes" Grid.Row="1" Grid.Column="3" SelectedItem="{Binding AppointmentType,Mode=TwoWay}" Width="150" HorizontalAlignment="Left" SelectionChanged="SelectedDateChanged" /> 
            </Grid>
        </StackPanel>
    </StackPanel>
</Window>
