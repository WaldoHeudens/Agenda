<Window x:Class="Agenda_WPF.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Agenda_WPF"
        mc:Ignorable="d"
        Title="Register" Height="350" Width="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Registreren" FontSize="24" FontWeight="Bold" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" HorizontalAlignment="Center" Margin="0,20,0,20"/>
        <Label Content="Gebruikersnaam:" Grid.Column="0" Grid.Row="1" Style="{StaticResource LabelStyle}"/>
        <TextBox x:Name="tbUsername" Grid.Column="1" Grid.Row="1" Width="200" HorizontalAlignment="Right" Margin="0,0,0,5"/>
        <Label Content="Voornaam" Grid.Column="0" Grid.Row="2"  Style="{StaticResource LabelStyle}"/>
        <TextBox x:Name="tbFirstName" Grid.Column="1" Grid.Row="2" Width="200" HorizontalAlignment="Right" Margin="0,0,0,5"/>
        <Label Content="Achternaam" Grid.Column="0" Grid.Row="3" Style="{StaticResource LabelStyle}"/>
        <TextBox x:Name="tbLastName" Grid.Column="1" Grid.Row="3" Width="200" HorizontalAlignment="Right" Margin="0,0,0,5"/>
        <Label Content="Email:" Grid.Column="0" Grid.Row="4"  Style="{StaticResource LabelStyle}"/>
        <TextBox x:Name="tbEmail" Grid.Column="1" Grid.Row="4" Width="200" HorizontalAlignment="Right" Margin="0,0,0,5"/>
        <Label Content="Wachtwoord:" Grid.Column="0" Grid.Row="5"  Style="{StaticResource LabelStyle}"/>
        <PasswordBox x:Name="pbPassword" Grid.Column="1" Grid.Row="5" Width="200" HorizontalAlignment="Right" Margin="0,0,0,5"/>
        <Label Content="Bevestig Wachtwoord:" Grid.Column="0" Grid.Row="6"  Style="{StaticResource LabelStyle}"/>
        <PasswordBox x:Name="pbConfirmPassword" Grid.Column="1" Grid.Row="6" Width="200" HorizontalAlignment="Right" Margin="0,0,0,5"/>
        <Button x:Name="btnRegister" Content="Registreren" Grid.Column="0" Grid.Row="7" Grid.ColumnSpan="2" Width="100" Height="30" HorizontalAlignment="Center" Margin="0,20,0,0" Click="btnRegister_Click"/>
        <TextBlock x:Name="tbError" Foreground="Red" FontSize="16" Margin="15,5,15,0" TextWrapping="Wrap" Grid.Column="0" Grid.Row="8" Grid.ColumnSpan="2"/>
    </Grid>
</Window>
