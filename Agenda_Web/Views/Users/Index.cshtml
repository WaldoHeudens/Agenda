@using Agenda_Web.Controllers
@model IEnumerable<UserViewModel>

@{
    ViewData["Title"] = "Users";
    string kommastring = "";
    string vertikaalStreepje = " | ";
}

<h1>Index</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Blocked)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Roles)
            </th>
            <th></th>
        </tr>
        <tr>
            <form asp-action="Index" asp-controller="Users" method="get">
            <th>
                <input type="text" name="username" class="form-control" value="@ViewBag.username" placeholder="?" onchange="$(this.form).submit();" />
            </th>
            <th></th>
            <th></th>
            <th>
                <select name="roleId" class="form-control" asp-items="ViewBag.Roles" onchange="$(this.form).submit();"></select>
            </th>
            </form>
         </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        <tr >
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @if (item.Blocked)
                {
                    <a asp-action="BlockUnblock" asp-route-id="@item.Id">Unblock</a>
                }
                else
                {
                    <a asp-action="BlockUnblock" asp-route-id="@item.Id">Block</a>
                }
            </td>
            <td>
                @foreach (var role in item.Roles)
                {
                    <span>@role </span>
                }
            </td>
            <td>
                    <a asp-action="Roles" asp-route-id="@item.Id">Roles</a>
            </td>
        </tr>
        }
    </tbody>
</table>
