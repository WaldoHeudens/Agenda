<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Agenda_App.MainPage"
             xmlns:viewmodel="clr-namespace:Agenda_App.ViewModels"
             xmlns:models="clr-namespace:Agenda_Models;assembly=Agenda_Models"
             x:DataType="viewmodel:MainViewModel">


    <Grid RowDefinitions="35, 150, 120, Auto, *" ColumnDefinitions=".75*,0.25*" Padding="10">
        <Image Grid.Row="1" Grid.ColumnSpan="2" Source="agenda_pic.jpg" BackgroundColor="Bisque"/>

        <StackLayout Grid.Row="2" Margin="10">
            <Entry Placeholder="Wanneer?" Text="{Binding Wanneer}"/>
            <Entry Placeholder="Wat?" Text="{Binding Wat}"/>
        </StackLayout>

        <Button Grid.Row="2" Grid.Column="1" Text="Niew" Margin="10" Command="{Binding VoegToeCommand}"/>
        <CollectionView Grid.Row="3" Grid.ColumnSpan="2" ItemsSource="{Binding Appointments}">
            <!--<CollectionView.ItemsSource>
                <x:Array Type="{x:Type x:String}">
                    <x:String>15/11 09:30 Dokter</x:String>
                    <x:String>17/11 12:00 Uit eten met baas</x:String>
                </x:Array>
            </CollectionView.ItemsSource>-->
            <CollectionView.ItemTemplate>
                <DataTemplate  x:DataType="models:Appointment">
                    <SwipeView>
                        <SwipeView.RightItems>
                            <SwipeItem Text="Verwijder" BackgroundColor="Red" />
                        </SwipeView.RightItems>
                        <StackLayout Orientation="Horizontal" HeightRequest="50" Padding="0,2">
                            <Border VerticalOptions="Center">
                                <Label Text="{Binding From}" Margin="10" FontSize="18"/>
                            </Border>
                            <Border VerticalOptions="Center">
                                <Label Text="{Binding Title}" Margin="10" FontSize="18"/>
                            </Border>
                        </StackLayout>
                    </SwipeView>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>
